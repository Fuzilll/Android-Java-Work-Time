<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    tools:showIn="@layout/activity_historico"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- TextView para o tipo de ponto -->
        <TextView
            android:id="@+id/tvTipoPonto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Ponto"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            tools:text="Entrada" />

        <!-- TextView para a localização -->
        <TextView
            android:id="@+id/tvLocalizacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Localização"
            android:textSize="14sp"
            android:layout_below="@id/tvTipoPonto"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            tools:text="Avenida Brasil, 3460" />

        <!-- TextView para a data e hora -->
        <TextView
            android:id="@+id/tvDataHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data/Hora"
            android:textSize="14sp"
            android:layout_below="@id/tvLocalizacao"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            tools:text="01/01/2023 12:00" />

        <!-- ImageView para a foto do ponto -->
        <ImageView
            android:id="@+id/ivFotoPonto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>