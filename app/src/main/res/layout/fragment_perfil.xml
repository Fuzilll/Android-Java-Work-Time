<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.PerfilFragment">

    <!-- Imagem do perfil -->
    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_perfil" />

    <!-- Nome do usuário -->
    <TextView
        android:id="@+id/tvNomeUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Usuário"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_below="@id/imgPerfil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Email do usuário -->
    <TextView
        android:id="@+id/tvEmailUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email@dominio.com"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_below="@id/tvNomeUsuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/cop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEmailUsuario"
        android:layout_marginTop="300dp"
        android:layout_alignStart="@id/tvEmailUsuario"
        android:textColor="@color/black"
        android:text="© Work Time"/>

</RelativeLayout>
